generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Member {
  id        BigInt   @id @default(autoincrement())
  uid       String   @unique
  name      String?
  email     String?  @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  rooms     Room[]
  gameSave  GameSave?
}

model Room {
  id          BigInt   @id @default(autoincrement())
  member      Member   @relation(fields: [memberId], references: [id])
  memberId    BigInt
  name        String?
  description String?
  images      Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
  items       Item[]
  records     Record[]
}

model Item {
  id        BigInt   @id @default(autoincrement())
  room      Room     @relation(fields: [roomId], references: [id])
  roomId    BigInt
  memberId  BigInt
  name      String?
  images    Json
  sale      Boolean
  price     BigInt
  buyUrl    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Record {
  id        BigInt   @id @default(autoincrement())
  room      Room     @relation(fields: [roomId], references: [id])
  roomId    BigInt
  memberId  BigInt
  text      String?
  images    Json
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model GameSave {
  id        BigInt   @id @default(autoincrement())
  memberId  BigInt   @unique
  member    Member   @relation(fields: [memberId], references: [id])
  data      Json
  rankScore Int      @default(0)
  rankCharacterId String? @db.VarChar(64)
  updatedAt DateTime @default(now()) @updatedAt

  @@index([rankScore])
  @@index([rankScore, updatedAt])
}
