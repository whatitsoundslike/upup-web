generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Member {
  id        BigInt   @id @default(autoincrement())
  uid       String   @unique
  name      String?
  email     String?  @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  rooms     Room[]
  gameSave  GameSave?
}

model Room {
  id          BigInt   @id @default(autoincrement())
  member      Member   @relation(fields: [memberId], references: [id])
  memberId    BigInt
  name        String?
  description String?
  images      Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
  items       Item[]
  records     Record[]
}

model Item {
  id        BigInt   @id @default(autoincrement())
  room      Room     @relation(fields: [roomId], references: [id])
  roomId    BigInt
  memberId  BigInt
  name      String?
  images    Json
  sale      Boolean
  price     BigInt
  buyUrl    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Record {
  id        BigInt   @id @default(autoincrement())
  room      Room     @relation(fields: [roomId], references: [id])
  roomId    BigInt
  memberId  BigInt
  text      String?
  images    Json
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model GameSave {
  id        BigInt   @id @default(autoincrement())
  memberId  BigInt   @unique
  member    Member   @relation(fields: [memberId], references: [id])
  data      Json
  rankScore Int      @default(0)
  rankCharacterId String? @db.VarChar(64)
  rankCharacter Json?
  tester    Boolean  @default(false)
  gameSessionId String? @db.VarChar(64)
  updatedAt DateTime @default(now()) @updatedAt

  @@index([rankScore])
  @@index([rankScore, updatedAt])
}

// Gem 트랜잭션 테이블 - 획득/소모 내역 기록
model GemTransaction {
  id        BigInt   @id @default(autoincrement())
  memberId  BigInt
  type      String   @db.VarChar(10)  // "issue" 또는 "use"
  amount    Int                        // 양수값 (issue: 획득량, use: 소모량)
  source    String   @db.VarChar(50)  // 획득처/사용처 (예: "purchase", "reward", "delete_character")
  memo      String?  @db.VarChar(200) // 추가 메모
  createdAt DateTime @default(now())

  @@index([memberId])
  @@index([memberId, createdAt])
}
